@page "/inventories/edit"
@using Microsoft.EntityFrameworkCore
@using SalesBook.Models
@using SalesBook.Data
@inject IDbContextFactory<SalesBook.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Inventory</h2>
<hr />
@if (Inventory is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Inventory" OnValidSubmit="UpdateInventory" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Inventory.Id" value="@Inventory.Id" />
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/inventories">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Inventory? Inventory { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Inventory ??= await context.Inventories.FirstOrDefaultAsync(m => m.Id == Id);

        if (Inventory is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateInventory()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Inventory!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!InventoryExists(Inventory!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/inventories");
    }

    private bool InventoryExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Inventories.Any(e => e.Id == id);
    }
}
